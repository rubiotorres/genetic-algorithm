% -----------------------------------------------------------------------------
%   Definição dos comandos para formatação da filiação instituicional dos autores do artigo
% -----------------------------------------------------------------------------

\providecommand{\imprimirinstituicaoA}{}
\newcommand{\instituicaoA}[1]{\renewcommand{\imprimirinstituicaoA}{#1}}
\providecommand{\imprimirinstituicaoB}{}
\newcommand{\instituicaoB}[1]{\renewcommand{\imprimirinstituicaoB}{#1}}
\providecommand{\imprimirinstituicaoC}{}
\newcommand{\instituicaoC}[1]{\renewcommand{\imprimirinstituicaoC}{#1}}
\providecommand{\imprimirinstituicaoD}{}
\newcommand{\instituicaoD}[1]{\renewcommand{\imprimirinstituicaoD}{#1}}
\providecommand{\imprimirinstituicaoE}{}
\newcommand{\instituicaoE}[1]{\renewcommand{\imprimirinstituicaoE}{#1}}

\newcommand{\filiacaoA}[5]{
	\instituicaoA{#1} \instituicaoB{#2} \instituicaoC{#3} \instituicaoD{#4} \instituicaoE{#5}
}

\providecommand{\imprimirautoresA}{}
\providecommand{\imprimirfiliacaoA}{}
\newcommand{\autoresA}[5]{ 

	\autorA{#1} \autorB{#2} \autorC{#3} \autorD{#4} \autorE{#5}

	\renewcommand{\imprimirautoresA}{
		\ifthenelse{\equal{#5}{}}
		{
			\ifthenelse{\equal{#4}{}}
			{
				\ifthenelse{\equal{#3}{}}
				{
					\ifthenelse{\equal{#2}{}}
					{
						\imprimirautorA{}$^1$
					}
					{
						\imprimirautorA{}$^1$, \imprimirautorB{}$^2$
					}	
				}
				{
					\imprimirautorA{}$^1$, \imprimirautorB{}$^2$, \imprimirautorC{}$^3$
				}
			}	
			{
				\imprimirautorA{}$^1$, \imprimirautorB{}$^2$, \imprimirautorC{}$^3$, \imprimirautorD{}$^4$
			}		
		}
		{
			\imprimirautorA{}$^1$, \imprimirautorB{}$^2$, \imprimirautorC{}$^3$, \imprimirautorD{}$^4$, \imprimirautorE{}$^5$
		}
	}

	\renewcommand{\imprimirfiliacaoA}{
		\ifthenelse{\equal{#5}{}}
		{
			\ifthenelse{\equal{#4}{}}
			{
				\ifthenelse{\equal{#3}{}}
				{
					\ifthenelse{\equal{#2}{}}
					{
						\let\thefootnote\relax\footnote{\hspace{-0.6cm}\tiny{\imprimirautorcorrespondente \\ 
						{\color{white}d}\hspace{-0.6cm}$^1$\imprimirinstituicaoA{}}} 
					}
					{
						\let\thefootnote\relax\footnote{\hspace{-0.6cm}\tiny{\imprimirautorcorrespondente \\  
						{\color{white}d}\hspace{-0.6cm}$^1$\imprimirinstituicaoA{} \\ {\color{white}d}\hspace{-0.6cm}$^2$\imprimirinstituicaoB{}}} 
					}	
				}
				{
					\let\thefootnote\relax\footnote{\hspace{-0.6cm}\tiny{\imprimirautorcorrespondente \\ 
					{\color{white}d}\hspace{-0.6cm}$^1$\imprimirinstituicaoA{} \\ {\color{white}d}\hspace{-0.6cm}$^2$\imprimirinstituicaoB{} \\ 
					{\color{white}d}\hspace{-0.6cm}$^3$\imprimirinstituicaoC{}}} 
				}
			}	
			{
				\let\thefootnote\relax\footnote{\hspace{-0.6cm}\tiny{\imprimirautorcorrespondente \\ 
				{\color{white}d}\hspace{-0.6cm}$^1$\imprimirinstituicaoA{} \\ {\color{white}d}\hspace{-0.6cm}$^2$\imprimirinstituicaoB{} \\ 
				{\color{white}d}\hspace{-0.6cm}$^3$\imprimirinstituicaoC{} \\ {\color{white}d}\hspace{-0.6cm}$^4$\imprimirinstituicaoD{}}} 
			}		
		}
		{
			\let\thefootnote\relax\footnote{\hspace{-0.6cm}\tiny{\imprimirautorcorrespondente \\ 
			{\color{white}d}\hspace{-0.6cm}$^1$\imprimirinstituicaoA{} \\ {\color{white}d}\hspace{-0.6cm}$^2$\imprimirinstituicaoB{} \\ 
			{\color{white}d}\hspace{-0.6cm}$^3$\imprimirinstituicaoC{} \\ {\color{white}d}\hspace{-0.6cm}$^4$\imprimirinstituicaoD{} \\
			{\color{white}d}\hspace{-0.6cm}$^5$\imprimirinstituicaoE{}}} 
		}
	}

}	



% -----------------------------------------------------------------------------
% Definição dos comandos para formatação do autor correspondente do artigo
% Obrigatoriamente deve ser um dos autores do artigo já relacionados 
% -----------------------------------------------------------------------------

\providecommand{\imprimirautorCor}{}
\newcommand{\autorCor}[1]{\renewcommand{\imprimirautorCor}{#1}}

\providecommand{\imprimiremailCor}{}
\newcommand{\emailCor}[1]{\renewcommand{\imprimiremailCor}{#1}}

\providecommand{\imprimirautorcorrespondente}{}
\newcommand{\autorcorrespondente}[2]{

	\autorCor{#1} \emailCor{#2}
	
	\renewcommand{\imprimirautorcorrespondente}{
		\ifthenelse{\equal{#1}{\imprimirautorA}}
			{\hspace{-0.5ex}$^1$Autor correspondente: \mbox{#2}}
			{
				\ifthenelse{\equal{#1}{\imprimirautorB}}
					{\hspace{-0.5ex}$^2$Autor correspondente: \mbox{#2}}
					{
						\ifthenelse{\equal{#1}{\imprimirautorC}}
							{\hspace{-0.5ex}$^3$Autor correspondente: \mbox{#2}}
							{
								\ifthenelse{\equal{#1}{\imprimirautorD}}
									{\hspace{-0.5ex}$^4$Autor correspondente: \mbox{#2}}
									{\hspace{-0.5ex}$^5$Autor correspondente: \mbox{#2}}
							}
					}	
			}
	} 
}



